{
  "name": "spiderdiagram",
  "version": "0.1.4",
  "description": "An Electron app to make spider diagrams",
  "author": "Teun Reyniers",
  "private": true,
  "devServer": {
    "open": false
  },
  "devDependencies": {
    "electron": "^3.0.0",
    "electron-builder": "^20.28.4",
    "electron-packager": "^12.1.2",
    "electron-winstaller": "^2.7.0",
    "foreman": "^3.0.1",
    "react-scripts": "^1.1.5"
  },
  "dependencies": {
    "electron-builder-squirrel-windows": "^20.28.3",
    "jsoneditor-react": "^0.1.9",
    "jszip": "^3.1.5",
    "office-ui-fabric-react": "^6.72.1",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-resize-detector": "^3.1.3"
  },
  "homepage": "./",
  "main": "src/electron-starter.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "dev": "nf start -p 3000",
    "pack": "build --dir",
    "dist": "npm run build && build",
    "postinstall": "install-app-deps"
  },
  "build": {
    "appId": "com.electron.hibernia.SpiderDiagram",
    "productName": "SpiderDiagram",
    "win": {
      "target": [
        "nsis",
        "zip",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": false,
      "license": "./eula.txt",
      "guid": "9d46424c-83a7-4610-a3e5-4236fbb5a427"
    },
    "mac": {
      "target": [
        "dmg",
        "pkg"
      ]
    },
    "pkg": {
      "license": "./eula.txt"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "directories": {
      "buildResources": "public",
      "output": "dist"
    }
  }
}
